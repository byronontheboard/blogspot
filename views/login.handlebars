<div class="d-flex flex-column justify-content-center align-items-center d-grid gap-3 bg-dark p-3 rounded">
    <div class="d-flex flex-column bg-light p-3 rounded">
        <h2>Login</h2>

        <form class="form login-form text-center d-grid gap-3">
            <div class="form-group">
                <label for="email-login"></label>
                <input class="form-input border border-dark rounded" type="text" id="email-login" placeholder="Enter Email"/>
            </div>
            <div class="form-group">
                <label for="password-login"></label>
                <input class="form-input border border-dark rounded" type="password" id="password-login" placeholder="Enter Password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-info" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <div class="d-flex flex-column p-3 bg-light rounded">
        <h2>Signup</h2>

        <form class="form signup-form text-center d-grid gap-3">
            <div class="form-group">
                <label for="name-signup"></label>
                <input class="form-input border border-dark rounded" type="text" id="name-signup" placeholder="Enter Name"/>
            </div>
            <div class="form-group">
                <label for="email-signup"></label>
                <input class="form-input border border-dark rounded" type="text" id="email-signup" placeholder="Enter Email"/>
            </div>
            <div class="form-group">
                <label for="password-signup"></label>
                <input class="form-input border border-dark rounded" type="password" id="password-signup" placeholder="Enter Password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-info" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>
